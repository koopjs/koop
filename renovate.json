{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "bumpVersion": "patch",
  "baseBranches": ["next"],
  "updateInternalDeps": true,
  "schedule": ["every weekend"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "matchFileNames": ["package.json", "packages/*/package.json"]
    },
    {
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "matchFileNames": ["package.json", "packages/*/package.json"]
    }
  ]
}