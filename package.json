{
  "name": "koop",
  "version": "1.0.0",
  "description": "Monorepo for Koop's core dependencies",
  "main": "index.js",
  "scripts": {
    "lint": "eslint \"packages/**/*.js\"",
    "lint:fix": "eslint \"packages/**/*.js\" --fix",
    "test": "npm run test:winnow",
    "test:winnow": "tape 'packages/winnow/**/*.spec.js' | tap-spec",
    "test:cov:winnow": "nyc --reporter=text-summary --reporter=html tape 'packages/winnow/**/*.spec.js' | tap-spec",
    "test:cov:winnow:unit": "nyc --reporter=text-summary --reporter=html tape 'packages/winnow/lib/**/*.spec.js' | tap-spec "
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/koopjs/koop.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/koopjs/koop/issues"
  },
  "homepage": "https://github.com/koopjs/koop#readme",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "lerna": "^5.5.1",
    "nyc": "^15.1.0"
  }
}
