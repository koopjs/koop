{
  "name": "koop",
  "version": "1.0.0",
  "description": "Monorepo for Koop's core dependencies",
  "main": "index.js",
  "scripts": {
    "lint": "eslint \"packages/**/*.js\"",
    "lint:fix": "eslint \"packages/**/*.js\" --fix",
    "prepare": "husky install",
    "commit": "cz",
    "precommit": "lint-staged && npm test --workspaces",
    "test": "npm test --workspaces",
    "test:featureserver": "(cd packages/featureserver && npm test)",
    "test:koop-cache-memory": "(cd packages/koop-cache-memory && npm test)",
    "test:koop-core": "(cd packages/koop-core && npm test)",
    "test:koop-logger": "(cd packages/koop-logger && npm test)",
    "test:koop-output-geoservices": "(cd packages/koop-output-geoservices && npm test)",
    "test:winnow": "(cd packages/winnow && npm test)",
    "test:packages": "npm run test:featureserver && npm run test:koop-cache-memory && npm run test:koop-core && npm run test:koop-logger && npm run test:koop-output-geoservices && npm run test:winnow",
    "test:e2e": "DATA_DIR=./test/provider-data jest ./test/*.spec.js",
    "version": "changeset version",
    "release:npm": "changeset publish",
    "release:github": "node gh-release.js",
    "add:changeset": "changeset"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/koopjs/koop.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/koopjs/koop/issues"
  },
  "homepage": "https://github.com/koopjs/koop#readme",
  "workspaces": [
    "packages/winnow",
    "packages/featureserver",
    "packages/koop-output-geoservices",
    "packages/koop-logger",
    "packages/koop-cache-memory",
    "packages/koop-core"
  ],
  "devDependencies": {
    "@babel/eslint-parser": "^7.19.1",
    "@changesets/changelog-git": "^0.1.13",
    "@changesets/cli": "^2.25.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@koopjs/provider-file-geojson": "^2.0.0",
    "babel-eslint": "^10.1.0",
    "commitizen": "^4.2.5",
    "commitlint": "^17.2.0",
    "cz-conventional-changelog": "^3.3.0",
    "cz-git": "^1.3.12",
    "eslint": "^8.23.1",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "lerna": "^6.0.1",
    "lerna-changelog": "^2.2.0",
    "lint-staged": "^13.0.3",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "supertest": "^6.3.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git",
      "czConfig": ".commitlintrc.js"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "!*.js": []
  },
  "volta": {
    "node": "16.18.0",
    "npm": "7.24.2"
  }
}
